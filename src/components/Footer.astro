---
import { SITE_CONFIG } from "@config";
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container flex flex-col items-center">
    <div class="social-links flex gap-sm">
      {
        SITE_CONFIG.socialLinks.map((link) => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" class="social-link mono">
            {link.text}
          </a>
        ))
      }
    </div>
    <p class="copyright text-muted mono">
      &copy; {currentYear} {SITE_CONFIG.author}. All rights reserved.
    </p>
  </div>
</footer>

<style>
  .site-footer {
    padding: var(--space-lg) 0;
    border-top: 1px solid var(--color-border);
    margin-top: var(--space-xl);
    background: var(--color-bg-secondary);
  }

  .social-links {
    margin-bottom: var(--space-sm);
  }

  .social-link {
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    background: var(--color-accent-dim);
  }

  .copyright {
    font-size: 0.8rem;
  }
</style>
